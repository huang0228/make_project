<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/maintab_padding"
    android:paddingBottom="@dimen/maintab_padding"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgMsg"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/main_tab_notify_selector" />
        <TextView
            android:id="@+id/tvMsgCount"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:minWidth="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:background="@drawable/red_msg_point_360"
            android:gravity="center"
            android:text=""
            android:layout_toRightOf="@+id/imgMsg"
            android:layout_marginLeft="-8dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="9sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tabText"
        style="@style/TabText"
        android:text="消息"/>

</LinearLayout>
